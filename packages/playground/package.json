  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "serve": "node devEnv/cli.js --serve --dev",
    "serve:ci": "node devEnv/cli.js --serve",
    "build": "node devEnv/cli.js",
    "build:static": "echo 'building for vercel' && yarn run build",
